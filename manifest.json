{
  "manifest_version": 3,
  "name": "BeatDocs",
  "version": "1.0",
  "description": "Make beats in google docs",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_popup_width": 700,
    "default_popup_height": 400
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "microphone"
  ],
  "oauth2": {
    "client_id": "32975098999-sqla5kpa00nlertlq9dqfo6v401g0jov.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/documents.readonly"
    ]
  }
}
